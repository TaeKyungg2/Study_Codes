{
  "version": "2.0.0",
  "tasks": [
	{
		"label": "Build and Run C++",
		"type": "shell",
		"command": "g++",
		"args": [
			"-fdiagnostics-color=always",
			"-g",
			"${file}",
			"-o",
			"${fileDirname}/${fileBasenameNoExtension}.exe",
			"&&",
			"${fileDirname}/${fileBasenameNoExtension}.exe"
		],
		"options": {
			"cwd": "${fileDirname}"
		},
		"problemMatcher": [
			"$gcc"
		],
		"group": {
			"kind": "test",
			"isDefault": true
		},
		"detail": "Compile and run current C++ file"
	}
]
}
